@page "/"

@if (ToDoLists == null)
{
	<p><em>no data</em></p>
}
else
{
    <div class="content">
        <div class="list column">
            <h3>Listen</h3>

            <textarea rows="16" cols="20"></textarea>
            
            <button type="button" class="button">
                <h4>Hinzufügen</h4>
            </button>
            <button type="button" class="button">
                <h4>Entfernen</h4>
            </button>
            <button type="button" class="button">
                <h4>Umbenennen</h4>
            </button>
        </div>
        <div class="task column">
            <h2>Aufgaben</h2>
            <textarea rows="16" cols="20"></textarea>
            <button type="button" class="button">
                <h4>Hinzufügen</h4>
            </button>
            <button type="button" class="button">
                <h4>Entfernen</h4>
            </button>
            <button type="button" class="button">
                <h4>Erledigt anzeigen</h4>
                <label class="container">
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </button>
        </div>
        <div class="details column">
            <h3>Beschreibung</h3>
            <div class="title">
                <h3>Name</h3>
            </div>
            <textarea rows="1" cols="20"></textarea>
            <div class="title">
                <h3>Notiz</h3>
            </div>
            <textarea rows="16" cols="20"></textarea>
            <div class="checkbox-area">
                <h5>Letzte Änderung: 2.17.2022 5:13</h5>
                <label class="container">
                    Erledigt
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button type="button" class="button">
                <h4>Änderung übernehmen</h4>
            </button>
        </div>
    </div>

	

}
	
